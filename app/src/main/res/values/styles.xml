<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentTranslucent</item>â€¨
        <item name="android:colorPressedHighlight">@color/colorAccentTranslucent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Material.Widget.ActionMode</item>
        <item name="android:animateOnClick">true</item>
    </style>

    <style name="Material.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:background">@color/colorAccent</item>
        <item name="background">@color/colorAccent</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/colorIcons</item>
        <item name="android:textColorSecondary">@color/colorIcons</item>
    </style>

    <style name="AppTheme.Card.Margins" parent="CardView">
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/margin_small</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ContactsButtonStyleNormal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    <style name="CustomProgressDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/updating_progress</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="VkButtonStyleNormal">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="VkButtonStyleSmall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:paddingLeft">9dp</item>
    </style>


    <style name="ContactsButtonStyleSmall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">9dp</item>
    </style>


    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="DateItemTextViewStyle" parent="WrapContent">
        <item name="android:textColor">@color/gray_overlay</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ItemTextViewStyle" parent="WrapContent">
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="LinkItemTextViewStyle" parent="WrapContent">
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

